{
  "expo": {
    "name": "しゃべるノート",
    "slug": "talknote",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.talknote.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "録音機能を利用するためにマイクへのアクセスを許可してください。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#4F46E5"
      },
      "package": "com.talknote.app"
    },
    "plugins": [
      "expo-font",
      "expo-av",
      "expo-file-system",
      "expo-sqlite"
    ]
  }
}
